<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="125"
			 x:Class="Fractarium.UserInterface.ColorTab">
	<Grid RowDefinitions="Auto,Auto,Auto,Auto"
		  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
		<Image Grid.Row="0"
			   Grid.Column="0"
			   Grid.RowSpan="2"
			   Name="ContinuousPreview"/>
		<Image Grid.Row="2"
			   Grid.Column="0"
			   Grid.RowSpan="2"
			   Name="DiscretePreview"/>
		<TextBlock Grid.Row="0"
				   Grid.Column="1">Palette size</TextBlock>
		<TextBox Grid.Row="1"
				 Grid.Column="1"
				 Name="PaletteSize"/>
		<TextBlock Grid.Row="2"
				   Grid.Column="1">Select color</TextBlock>
		<ComboBox Grid.Row="3"
				  Grid.Column="1"
				  Items="{Binding ComboBoxEntries}"/>
	</Grid>
</UserControl>