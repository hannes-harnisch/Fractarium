<Application xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:Fractarium"
			 x:Class="Fractarium.App">
	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>
	<Application.Styles>
		<StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
		<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
		<Style Selector="Grid > TextBlock">
			<Setter Property="Margin">0,5,10,0</Setter>
		</Style>
		<Style Selector="TextBox, ComboBox">
			<Setter Property="Margin">0,0,10,5</Setter>
		</Style>
		<Style Selector="CheckBox">
			<Setter Property="Margin">0,0,10,0</Setter>
		</Style>
	</Application.Styles>
</Application>